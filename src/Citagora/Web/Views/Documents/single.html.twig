{% extends 'base.html.twig' %}
{% block page_title %}
    {{ document.title }}
{% endblock %}
{% block page_content %}
{# Single Document View
 #
 # Available Variables:
 #   document  (DocumentView)
 #}
<div class="two-thirds column">

 <div class="paper-record" id="pane"> 
          
       <h4>{{ document.title }}</h4> 
        
        <p class="authors">
            {% for author in document.contributors %}
            <a href="#">{{ author }}</a> ;
            {% endfor %}
        </p> 
        
        <p>
            <span class="text-label">Published in:</span> <a href="">{{ document.journal }}</a>
            <br><span class="text-label">Publication Type</span> Journal Article
            <br><span class="text-label">Year of Publication</span> {{ document.year }} (Vol 1, I 2)
            <br><span class="text-label">Pagination</span> {{ document.pagination }}
            <br><span class="text-label">DOI</span> <a href="{{ document.doiUrl }}">{{ document.doi }}</a>
            <br><span class="text-label">PubMed ID</span> <a href="{{ document.pmidUrl }}">{{ document.pmid }}</a>
            <br><span class="text-label">URL</span>
                <a href="{{ document.url }}">
                    {{ document.url|slice(0,50) }}{% if document.url|length > 50 %}&hellip;{% endif %}
                </a>
        </p> 
</div> 
  
<br>

<ul id="tabs" class="tabs">
    <li class="active"><a href="#abstract">Abstract</a></li>
    <li class=""><a href="#ratings">Ratings</a></li>
    <li class=""><a href="#comments">Comments</a></li>
    <li class=""><a href="#citations">Citations</a></li>
    <li class=""><a href="#export">Export</a></li>
</ul>


<div id="abstract" class="content" style="display: block;">
    <h4>Abstract</h4>
    <hr class="tab-rule">
    {{ document.abstract|nl2br }}
</div>
<div id="ratings" class="content" style="display: none;">
    <h4>Ratings</h4>
    <hr class="tab-rule">
    <p><strong>15</strong> Citagora users have rated this paper
    <br>

    <h2>Actual ratings (fix me)</h2>
    <ul>
        <li>Overall:     {{ document.aggregateRating('overall') }}</li>
        <li>Readability: {{ document.aggregateRating('readabilty') }}</li>
        <li>Accuracy:    {{ document.aggregateRating('accuracy') }}</li>
        <li>Originality: {{ document.aggregateRating('originality') }}</li>
        <li id='ratings-test'>Ratings Test (click me)</li>
    </ul>

    </p><table class="tab-table" cellpadding="0" cellspacing="0" border="0">
    <tbody><tr valign="top">
    <td width="25%"><span class="rating-group">Overall  </span></td>
    <td width="25%"><span class="rating-group">Readability </span></td>
    <td width="25%"><span class="rating-group">Accuracy </span></td>
    <td width="25%"><span class="rating-group">Originality </span></td>
    </tr>
    <tr valign="top">
    <td width="25%"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_off.jpg" border="0" class="rated"></td>
    <td width="25%"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_off.jpg" border="0" class="rated"></td>
    <td width="25%"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"></td>
    <td width="25%"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_on.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_off.jpg" border="0" class="rated"><img src="{{ asset_url }}/_img/rating_off.jpg" border="0" class="rated"></td>
    </tr>
    </tbody></table>
    
    
    
    
    <br><br><a href="#dialog" name="modal"><input type="button" value="Add your rating"></a><p></p>
</div>
<div id="comments" class="content" style="display: none;">
    <h4>Comments</h4>
     <hr class="tab-rule">
    <img src="{{ asset_url }}/_img/disqus.jpg" border="0" style="width: auto;">
    
</div>

<div id="citations" class="content" style="display: none;">
    <h4>Cited Works</h4>
     <hr class="tab-rule">

        {% for citation in document.citations %}
            <h6><a href="#">{{ citation.title }}</a></h6> 
            <p class="authors">{{ citation.contributors|join('; ') }}</p> 
        {% endfor %}
</div>

<div id="export" class="content" style="display: none;">
    <h4>Export this record</h4>
     <hr class="tab-rule">
     <input type="checkbox">Include cited works
     <br><br>
     Destination: <input type="checkbox">Mendeley
     <input type="checkbox">Zotero <input type="checkbox">BibTex <input type="checkbox">Etc
     <br><br><input type="button" value="Export">
     
</div>







